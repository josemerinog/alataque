
<div class="container">

  <div class="row justify-content-center">
    <div class="col-5">
      <h1>Anotar Problema</h1>
      <%= form_for @problem do |f| %>
        <div class="form-group">
          <%= f.label :title,"Título: " %>
          <%= f.text_field :title, class:"form-control", placeholder:"Agregue el título"  %>
        </div>
        <div class="form-group">
          <%= f.label :description, "Descripción: "  %>
          <%= f.text_area :description, class:"form-control", placeholder:"Agregue la descripcion"  %>
        </div>
      <%= f.submit "Agregar Problema", class:"btn btn-primary" %>

      <% end %>

    </div>

  </div>
</div>
